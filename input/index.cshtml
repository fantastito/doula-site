---
Layout: _Layout
Language: en
---
@{
    var lang = Outputs
        .FromPipeline("Data")
        .First(x => x.Source.FileName == "content.json")
        .GetDocument("languages")
        .GetDocument("en");

    var header = lang.GetDocument("header");
    var about = lang.GetDocument("about");
    var services = lang.GetDocument("services");
    var testimonials = lang.GetDocument("testimonials");
    var contact = lang.GetDocument("contact");
}

<header>
    <div class="container">
        <h1>@header.GetString("title")</h1>
        <p class="tagline">@header.GetString("tagline")</p>
        <a href="#contact" class="cta-button">@header.GetString("ctaText")</a>
    </div>
</header>

<section class="about">
    <div class="container">
        <div class="about-content">
            <div class="about-image">@about.GetString("icon")</div>
            <div>
                <h2>@about.GetString("heading")</h2>
                @foreach (var paragraph in about.GetList<string>("paragraphs"))
                {
                    <p>@paragraph</p>
                }
            </div>
        </div>
    </div>
</section>

<section class="services">
    <div class="container">
        <h2>@services.GetString("heading")</h2>
        <div class="service-grid">
            @foreach (var item in services.GetList<IDocument>("items"))
            {
                <div class="service-card">
                    <span class="service-icon">@item.GetString("icon")</span>
                    <h3>@item.GetString("title")</h3>
                    <p>@item.GetString("description")</p>
                </div>
            }
        </div>
    </div>
</section>

<section class="testimonials">
    <div class="container">
        <h2>@testimonials.GetString("heading")</h2>
        @foreach (var item in testimonials.GetList<IDocument>("items"))
        {
            <div class="testimonial-card">
                <p class="testimonial-text">@item.GetString("text")</p>
                <p class="testimonial-author">â€” @item.GetString("author")</p>
            </div>
        }
    </div>
</section>

<section class="contact" id="contact">
    <div class="container">
        <h2>@contact.GetString("heading")</h2>
        <p>@contact.GetString("intro")</p>
        <a href="mailto:@contact.GetDocument("email").GetString("value") class="cta-button">
            @contact.GetString("ctaText")
        </a>
        <div class="contact-info">
            <div class="contact-item">
                <strong>@contact.GetDocument("email").GetString("label")</strong>
                <a href="mailto:@contact.GetDocument("email").GetString("value")">
                    @contact.GetDocument("email").GetString("value")
                </a>
            </div>
            <div class="contact-item">
                <strong>@contact.GetDocument("phone").GetString("label")</strong>
                <a href="tel:@contact.GetDocument("phone").GetString("tel")">
                    @contact.GetDocument("phone").GetString("value")
                </a>
            </div>
        </div>
    </div>
</section>